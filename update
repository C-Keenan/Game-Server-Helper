                echo "AUTOSAVEINTERVAL=600" >> /usr/gsh/docker/satisfactory/satisfactory.env
                echo "AUTOSAVENUM=2" >> /usr/gsh/docker/satisfactory/satisfactory.env
                echo "AUTOSAVEONDISCONNECT=true" >> /usr/gsh/docker/satisfactory/satisfactory.env
                echo "CRASHREPORT=true" >> /usr/gsh/docker/satisfactory/satisfactory.env
                echo "DEBUG=false" >> /usr/gsh/docker/satisfactory/satisfactory.env
                echo "DISABLESEASONALEVENTS=false" >> /usr/gsh/docker/satisfactory/satisfactory.env
                echo "MAXPLAYERS=4" >> /usr/gsh/docker/satisfactory/satisfactory.env
                echo "MAXOBJECTS=2162688 #this is currently the default value for Satisfactory as shipped" >> /usr/gsh/docker/satisfactory/satisfactory.env
                echo "MAXTICKRATE=30" >> /usr/gsh/docker/satisfactory/satisfactory.env
                echo "NETWORKQUALITY=3" >> /usr/gsh/docker/satisfactory/satisfactory.env
                echo "PGID=1001" >> /usr/gsh/docker/satisfactory/satisfactory.env
                echo "PUID=1001" >> /usr/gsh/docker/satisfactory/satisfactory.env
                echo "ROOTLESS=false" >> /usr/gsh/docker/satisfactory/satisfactory.env
